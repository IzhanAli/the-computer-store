<?xml version="1.0" encoding="utf-8"?>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CompStore">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".CompStore"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selctbrand"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="17dp"
                android:gravity="center_horizontal"
                android:text="Select Brand:"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/selctbrand">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="15dp"

                        app:cardCornerRadius="4dp"
                        app:cardElevation="1dp"
                        app:contentPadding="11dp">

                        <ImageView

                            android:id="@+id/len"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/lenovo" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="15dp"

                        app:cardCornerRadius="4dp"
                        app:cardElevation="1dp"
                        app:contentPadding="12dp">

                        <ImageView
                            android:id="@+id/hp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/hp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="15dp"

                        app:cardCornerRadius="4dp"
                        app:cardElevation="1dp"
                        app:contentPadding="11dp">

                        <ImageView

                            android:id="@+id/acer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/acer" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="125dp"
                        android:layout_margin="15dp"

                        app:cardCornerRadius="4dp"
                        app:cardElevation="1dp"
                        app:contentPadding="13dp">

                        <ImageView
                            android:id="@+id/dell"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/dell" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay1"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <TextView
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="Select Model:"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnercomp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="18dp"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="60dp"
android:text="Quantity"
                    android:layout_marginEnd="23dp"


                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <LinearLayout

                    android:id="@+id/lay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dec"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="14dp"
                        android:text="â€”"
                        android:textSize="18sp"
                        app:strokeColor="@color/primary_dark" />

                    <!--<EditText

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="1"
                        android:maxLength="3"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/quantity_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="3"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="3"

                            android:inputType="number"

                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/inc"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="14dp"
                        android:text="+"
                        android:textSize="19sp"
                        app:strokeColor="@color/primary_dark" />

                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/acce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="30dp"
                android:checked="false"
                android:text="Include Accesories   (+$6)"
                android:textAllCaps="true"
                android:textSize="14sp"
                 />

            <View
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/acce"
                android:layout_marginTop="24dp"
                android:background="@color/primary_dark" />

            <LinearLayout
                android:id="@+id/lay5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:text="SUB TOTAL:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:text="$0"
                    android:id="@+id/ppricecomp"
                    android:textColor="@color/colorAccent"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/material_buttonp"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:onClick="checkout"
android:text="proceed"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                />
        </LinearLayout>
    </ScrollView>

