<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_dialog_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/primary"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_dialog_fullscreen_closee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"

                android:padding="4dp"
                android:src="@drawable/ic_arrow_back_white_24dp" />

            <TextView
                style="@style/Base.DialogWindowTitle.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="Help"
                android:textColor="#000" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="49dp"
        android:textAlignment="center"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:text="Facing any issues? Try one of these" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="170dp"
        android:layout_height="wrap_content"
app:icon="@drawable/ic_call_black_18dp"
        android:layout_gravity="center"
        android:id="@+id/call"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
       android:text="CAll us"
        app:strokeColor="@color/accent"
       android:drawableStart="@drawable/ic_call_black_18dp"
        android:drawableEnd="@drawable/ic_chevron_right_blue_grey_900_48dp"
     />

    <com.google.android.material.button.MaterialButton
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/suportmail"
        app:icon="@drawable/ic_mail_outline_black_18dp"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="Email us"
        app:strokeColor="@color/accent"

        android:drawableEnd="@drawable/ic_chevron_right_blue_grey_900_48dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_message_black_18dp"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="Whatsapp"
        android:id="@+id/wa"
        app:strokeColor="@color/accent"

        android:drawableEnd="@drawable/ic_chevron_right_blue_grey_900_48dp"
        />
</LinearLayout>